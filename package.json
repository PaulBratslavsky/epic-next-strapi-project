{
  "name": "strapi-next-epic-tutorial",
  "version": "1.0.0",
  "description": "Strapi starter project with Next.js",
  "type": "module",
  "scripts": {
    "frontend": "yarn dev --prefix ../frontend/",
    "backend": "yarn dev --prefix ../backend/",
    "setup:frontend": "cd frontend && yarn && node --loader ts-node/esm ../copy-env.mts ./",
    "setup:backend": "cd backend && yarn && node --loader ts-node/esm ../copy-env.mts ./",
    "setup": "yarn install && yarn setup:frontend && yarn setup:backend",
    "dev": "yarn concurrently \"cd backend && yarn develop\" \"npx wait-on http://localhost:1337 && cd frontend && yarn dev\"",
    "seed": "cd backend && yarn strapi import -f ../seed-data.tar.gz --force",
    "export": "cd backend && yarn strapi export --no-encrypt -f ../seed-data",
    "repo:upstream": "git fetch upstream && git merge upstream/main"
  },
  "dependencies": {
    "@types/node": "^22.5.2",
    "concurrently": "^8.2.2",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.1"
  },
  "devDependencies": {
    "ts-node": "^10.9.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
